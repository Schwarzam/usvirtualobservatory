<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <!-- Local services -->

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" >
     <property name="location"><value>classpath:get-testing.properties</value></property>
  </bean>
  
  <bean name="serviceConfig" class="org.usvao.service.testing.HttpServiceAdapter">
      <property name="baseUrl" value="${baseUrl}"/>
      <property name="responseSchema" value="${responseSchema}"/>
      <property name="charset" value="${charset}"/>
      <property name="userAgent" value="${userAgent}"/>
  </bean>
  
</beans>